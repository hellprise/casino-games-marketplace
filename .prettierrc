{
	"trailingComma": "none",
	"tabWidth": 2,
	"printWidth": 120,
	"useTabs": true,
	"semi": false,
	"bracketSameLine": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/app/(.*)$",
		"^@/pages/(.*)$",
		"^@/layouts/(.*)$",
		"^@/entities/(.*)$",
		"^@/games/(.*)$",
		"^@/hooks/(.*)$",
		"^@/utils/(.*)$",
		"^@/shared/(.*)$",
		"^@/assets/(.*)$",
		"^../(.*)$",
		"^./(.*)"
	],
	"importOrderSeparation": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
